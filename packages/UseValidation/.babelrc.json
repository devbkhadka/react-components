{
    "sourceType": "unambiguous",
    "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "chrome": 100
            }
          }
        ],
        [
            "@babel/preset-typescript",
            {
              "onlyRemoveTypeImports": true,
              "allExtensions": true,
              "isTSX": true
            }
          ],
        ["@babel/preset-react", {
          "runtime": "automatic"
       }]
    ],
    "plugins": [
        "@babel/plugin-syntax-dynamic-import",
        "babel-plugin-jsx-control-statements"
    ]
}
